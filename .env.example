# CyberSec Teaching Tool - Environment Variables

# Backend Configuration
DATABASE_URL=sqlite:///./data/cybersec.db
DEBUG=true
LOG_LEVEL=INFO

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
HOSTED_LLM_API_KEY=
HOSTED_LLM_BASE_URL=

# Security
SECRET_KEY=change-this-in-production

# Feature Flags
ENABLE_REAL_SCANNING=true
ENABLE_TELEMETRY=false

# Application Mode (training or live)
# - training: Safe practice environment with simulated network data (recommended for learning)
# - live: Real network scanning using nmap (requires nmap installation and permissions)
DEFAULT_APPLICATION_MODE=training
